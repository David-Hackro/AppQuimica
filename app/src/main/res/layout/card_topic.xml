<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_people"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cardview_default_radius"

    >

    <RelativeLayout
        android:layout_margin="@dimen/cardview_default_radius"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:animateLayoutChanges="true"
        >


        <ImageView
            android:id="@+id/card_topic_icon"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_gallery"
            android:layout_margin="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:layout_below="@+id/card_topic_icon"
            android:id="@+id/card_topic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/card_topic_description"
            android:layout_below="@+id/card_topic_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_toRightOf="@+id/card_topic_name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />



    </RelativeLayout>

</android.support.v7.widget.CardView>